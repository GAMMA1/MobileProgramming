<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/nama_app"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:text="Aplikasi Dengan SQLITE"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="40dp" />

    <Button
        android:id="@+id/button_tambah"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="TAMBAH Barang"
        android:background="#00b0fb"
        android:textColor="#ffffff"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/nama_app"
        android:layout_alignParentStart="true"
        android:height="50dp" />

    <Button
        android:id="@+id/button_view"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="VIEW DATA Barang"
        android:textColor="#3d3d3d"
        android:layout_marginTop="10dp"
        android:background="#e3e3e3"
        android:layout_below="@+id/button_tambah"
        android:layout_alignParentStart="true"
        android:height="50dp" />

    <Button
        android:id="@+id/button_tambahMhs"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="TAMBAH MAHASISWA"
        android:background="#00b0fb"
        android:textColor="#ffffff"
        android:layout_below="@+id/button_view"
        android:layout_alignParentStart="true"
        android:layout_marginTop="30dp"
        android:height="50dp" />

    <Button
        android:id="@+id/button_viewMhs"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="VIEW DATA MAHASISWA"
        android:layout_below="@+id/button_tambahMhs"
        android:layout_alignParentStart="true"
        android:layout_marginTop="10dp"
        android:height="50dp"
        android:background="#e3e3e3" />


    <Button
        android:id="@+id/button_tambahDsn"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
            android:text="TAMBAH DOSEN"
        android:layout_below="@+id/button_viewMhs"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="33dp"
        android:height="50dp"
        android:layout_alignParentStart="true"
        android:background="#00b0fb"
        android:textColor="#ffffff" />

    <Button
        android:id="@+id/button_viewDsn"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="VIEW DATA DOSEN"
        android:height="50dp"
        android:layout_below="@+id/button_tambahDsn"
        android:layout_alignParentEnd="false"
        android:layout_alignParentStart="true"
        android:background="#e3e3e3"
        android:layout_marginTop="10dp" />

</RelativeLayout>
